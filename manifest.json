{
    "manifest_version": 2,
    "name": "Export Tabs URLs",
    "version": "1.0",
    "description": "Export open tab URLs and titles.",
    "permissions": ["tabs", "clipboardWrite"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icon.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  